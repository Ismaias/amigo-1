<h1>Listing animals</h1>

<table>
  <tr>
    <th>Raca</th>
    <th>Idade</th>
    <th>Pelagem</th>
    <th>Descricao</th>
    <th>Especie</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @animals.each do |animal| %>
  <tr>
    <td><%= animal.raca %></td>
    <td><%= animal.idade %></td>
    <td><%= animal.pelagem %></td>
    <td><%= animal.descricao %></td>
    <td><%= animal.especie_id %></td>
    <td><%= link_to 'Show', animal %></td>
    <td><%= link_to 'Edit', edit_animal_path(animal) %></td>
    <td><%= link_to 'Destroy', animal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

